<h1> New Employee</h1>

<%= form_for @employee do |f| %>
    <% if @employee.errors.any? %>
        <% @employee.errors.full_messages.each do |error| %>
            <li> <%=error%></li>
            <% end %>
        <% end %>
    

    <%= f.label :first_name%>
    <%= f.text_field :first_name%>

    <%= f.label :last_name%>
    <%= f.text_field :last_name%>

    <%= f.label :alias%>
    <%= f.text_field :alias%>

    <%= f.label :title%>
    <%= f.text_field :title%>

    <%= f.label :office%>
    <%= f.text_field :office%>

    <%= f.label :dog%>
    <%= f.collection_select(:dog_id, Dog.all, :id, :name)%>
    <%= f.submit %>
<% end %>
